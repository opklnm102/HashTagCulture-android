<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ipocs.hashtagculture.fragment.RecommendFragment">

        <RelativeLayout
            android:id="@+id/relativeLayout_tag"
            android:background="@color/window_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp"
                android:text="태그"/>

            <ImageView
                android:id="@+id/imageView_tag_show"
                android:layout_width="24dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:src="@android:drawable/arrow_up_float"/>
        </RelativeLayout>

        <LinearLayout
            android:background="@color/window_background"
            android:id="@+id/linearLayout_tag"
            android:visibility="visible"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.ipocs.hashtagculture.widget.SelectTextView
                    android:id="@+id/textView_tag_music"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/category_shape_normal"
                    android:text="음악"/>

                <com.ipocs.hashtagculture.widget.SelectTextView
                    android:id="@+id/textView_tag_concert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/category_shape_normal"
                    android:text="콘서트"/>

                <com.ipocs.hashtagculture.widget.SelectTextView
                    android:id="@+id/textView_tag_theater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/category_shape_normal"
                    android:text="연극"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.ipocs.hashtagculture.widget.SelectTextView
                    android:id="@+id/textView_tag_gukak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/category_shape_normal"
                    android:text="국악"/>

                <com.ipocs.hashtagculture.widget.SelectTextView
                    android:id="@+id/textView_tag_etc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/category_shape_normal"
                    android:text="기타"/>

                <com.ipocs.hashtagculture.widget.SelectTextView
                    android:visibility="gone"
                    android:id="@+id/textView_tag_art"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/category_shape_normal"
                    android:text="미술"/>
            </LinearLayout>
        </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_recommend"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
