<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardView_entire"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="300dp"
    android:background="#fefefe"
    app:cardCornerRadius="6dp"
    xmlns:fresco="http://schemas.android.com/tools">

    <RelativeLayout
        style="@style/Widget.CardContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imageView_sumnail"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/img1"
            fresco:placeholderImage="@color/window_background"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:failureImage="@drawable/img1"
            fresco:failureImageScaleType="fitCenter"/>

        <TextView
            android:textSize="@dimen/entire_title_size"
            android:id="@+id/textView_title"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView_sumnail"
            android:layout_alignParentLeft="true"
            android:text="한국 피아노협회 공연"/>

        <LinearLayout
            android:id="@+id/container_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:textSize="@dimen/entire_date_size"
                android:id="@+id/textView_date_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015.12.22"/>

            <TextView
                android:textSize="@dimen/entire_date_size"
                android:id="@+id/textView_date_mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ~ "/>

            <TextView
                android:textSize="@dimen/entire_date_size"
                android:id="@+id/textView_date_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015.12.24"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>