<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardView_recommend"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#fefefe"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imageView_sumnail"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/img1"
            fresco:placeholderImage="@color/window_background"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:failureImage="@drawable/img1"
            fresco:failureImageScaleType="fitCenter"/>

        <TextView
            android:layout_below="@id/imageView_sumnail"
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="한국 피아노협회 공연"/>

        <LinearLayout
            android:id="@+id/container_hashTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/textView_title"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#음악"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_date_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015.12.22"/>

            <TextView
                android:id="@+id/textView_date_mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ~ "/>

            <TextView
                android:id="@+id/textView_date_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015.12.24"/>
        </LinearLayout>

        <!--<ImageView-->
            <!--android:id="@+id/imageView_bookmark"-->
            <!--android:layout_width="30dp"-->
            <!--android:layout_height="30dp"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:scaleType="fitXY"-->
            <!--android:src="@mipmap/ic_launcher"/>-->
    </RelativeLayout>
</android.support.v7.widget.CardView>